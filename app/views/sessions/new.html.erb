
<div class="row col-md-6">
  <h2>Log in</h2>
  <%= form_with(scope: :session, url: login_path ) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <p>次回から自動でログイン</p>
    <% end %>

    <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>
</div>