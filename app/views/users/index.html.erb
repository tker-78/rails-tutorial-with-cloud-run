<h2>Users List</h2>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @users %>
  </div>
</div>

<table class="table" >
  <thead>
    <th>id</th>
    <th>name</th>
    <th>email</th>
    <th>created_at</th>
    <th>updated_at</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, user_path(user), class: "link hover"%></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.strftime("%F %X") %></td>
        <td><%= user.updated_at.strftime("%F %X") %></td>
        <td><%= link_to "delete", user, data: { "turbo-method": :delete, turbo_confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
      </tr>
    <% end %>
  </tbody>

</table>


<div class="digg_pagination">
  <%= will_paginate @users %>
</div>
